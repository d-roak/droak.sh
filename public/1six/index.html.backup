    <script>
        // ASCII Wave Animation
        function generateWave(frame) {
            const width = 100;
            const height = 20;
            const chars = ['/', '|', '\\', '-', '.', ' '];
            let output = '';
            
            for (let y = 0; y < height; y++) {
                for (let x = 0; x < width; x++) {
                    const wave = Math.sin((x / 8) + (frame / 10)) * 5 + 
                                Math.cos((x / 12) + (frame / 8)) * 3;
                    
                    // Add shadow offset
                    const shadow = Math.sin((x / 10) + (frame / 12) + 0.5) * 4;
                    
                    if (Math.abs(y - (height / 2) - wave) < 1.5) {
                        output += chars[Math.floor(Math.random() * 3)];
                    } else if (Math.abs(y - (height / 2) - shadow) < 0.8) {
                        output += chars[4]; // dot for shadow
                    } else {
                        output += ' ';
                    }
                }
                output += '\n';
            }
            return output;
        }

        // ASCII World Map
        const worldMap = `
                                    . .  . . .    .  .   .   .  .                    
                              .   .  .  . .   .      .  .  . .   .                  
                           .  . .   .    .  .  .   .     .   . .                    
                        .  .     .  .  .    .   . .   .  . .   . .                  
                      .   .  .  .    . .  .   .    . .     .  .   .                 
                   . .  .   .  . .  .   .  .  . .    .  . .   .  .                  
                 .   . .  .  .   .  . .  .  .   .  .   .  .  . .                    
               .  . .  . . .  . .  .  . . .  .  .  . . .  . .  .                    
             . . .  . .  . .   . . . . . .  . .  . .  . . .  . .                    
           . .  . .  . . .  . . . . .  . . .  . . .  . .  . . .                     
         . . . . . . .  . . .  . .  . . .  . . .  . . . . .  .                      
       . .  . . .  . . . . . . . . . .  . . .  . . . .  . . .                       
     . . . . .  . . .  . .  . . .  . . . . . . .  . . . . .                         
   . .  . . . . . . . . . . .  . . . . .  . . . . . .  . .                          
 . . . . .  . . . . .  . . . . . . . . . . . . .  . . . .                           
`;

        let frame = 0;
        const waveElement = document.getElementById('ascii-wave');
        const mapElement = document.getElementById('ascii-map');
        
        mapElement.innerHTML = generateMap();

        function animate() {
            waveElement.textContent = generateWave(frame);
            frame += 0.3;
            requestAnimationFrame(animate);
        }

        animate();

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
